<% if user_signed_in? %>
<h3>Welcome back, <%= current_user.first_name %> <%= current_user.last_name %></h3>
<h4>Here are your challenges</h4>

<table class="table table-striped table-bordered table-condensed">
	<tr>
		<th>Title</th>
		<th>Short Description</th>
		<th>Due Date</th>
		<th>Created date</th>
		<th>Last updated</th>
	</tr>
	<% for challenge in @challenges %>
		<tr>
			<td><%= challenge.title %></td>
			<td><%= challenge.description %></td>
			<td><%= challenge.end_time %></td>
			<td><%= challenge.created_at %></td>
			<td><%= challenge.updated_at %></td>
			<td><%= link_to "Show", challenge %></td>
			<td><%= link_to "Edit", edit_challenge_path(challenge),:id => "edit_" + challenge.id.to_s%></td>
			<td><%= link_to "Delete", challenge, :confirm => 'Are you sure?', :method => :delete, :id => "delete_" + challenge.id.to_s%> </td>
		</tr>
	<% end %> 
</table>

<%= link_to "New Challenge", new_challenge_path %>

<% else %>
<h3>Welcome guest, register or sign in to view your challenges</h3>
<% end %>