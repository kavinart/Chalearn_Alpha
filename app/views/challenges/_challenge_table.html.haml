%table{:class => "table table-striped table-bordered table-condensed"}
  %thead
    %tr
      %th= link_to 'Title', challenges_path(:sort => 'title')
      %th Description
      %th= link_to 'Start Time', challenges_path(:sort => 'start_time')
      %th= link_to 'End Time', challenges_path(:sort => 'end_time')
      %th= link_to 'Last Updated', challenges_path(:sort => 'updated_at')
  %tbody
    - @challenges.each do |challenge|
      %tr
        %td= challenge.title 
        %td= challenge.description
        %td= challenge.start_time
        %td= challenge.end_time
        %td= challenge.updated_at
        %td= link_to "Show", challenge
        %td= link_to "Edit", edit_challenge_path(challenge),:id => "edit_" + challenge.id.to_s
        %td= link_to "Delete", challenge, :confirm => 'Are you sure?', :method => :delete, :id => "delete_" + challenge.id.to_s