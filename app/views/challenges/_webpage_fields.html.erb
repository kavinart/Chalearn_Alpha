<div class="webpage">	
	<%= f.label :title, "Page title"%>
	<%= f.text_field :title %><br />

	<div class="ext_url"> Use external URL <%= f.check_box :is_external_url %> </div>

	<%= f.label :web_content, "Page content" %>
	<div class="text"> <%= f.text_area :web_content, :style => "width: 800px; height: 200px", :class => "wysihtml5" , :rows => 10 %> </div> <br/>


	<%= f.label :_destory, "Remove Webpage" %>
	<%= f.check_box :_destroy %> <br/><br/>
</div>

<script>

$(".ext_url").click(function() {
	// var webpg = $( this ).parent();
	$(this).parent().find('.text').slideUp();
});
</script>